<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.views.TaskInfo">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="LightPink"
                          Offset="0.1" />
            <GradientStop Color="HotPink"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="40">
            <Label Text="TASK INFO" FontSize="50" FontAttributes="Bold" Margin="0,0,0,60" HorizontalTextAlignment="Center"/>
            <Label x:Name="Name" Text="Name: " FontSize="30" Margin="0,0,0,20"/>
            <Label x:Name="Date" Text="Date: " FontSize="20" Margin="0,0,0,5"/>
            <Label x:Name="Description" Text="Description: " FontSize="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>